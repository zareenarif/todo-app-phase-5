# =============================================================================
# Frontend Dockerfile — Next.js ChatKit UI (standalone mode)
# Multi-stage, non-root, no hardcoded secrets
# Generated by Claude Code (AI-generated infrastructure per constitution XI)
# =============================================================================

# ---------------------------------------------------------------------------
# Stage 1: Dependencies — install npm packages
# ---------------------------------------------------------------------------
FROM node:18-alpine AS deps

WORKDIR /app

# Copy package manifests for layer caching
COPY package.json package-lock.json* ./

# Install production + dev dependencies (dev needed for build step)
RUN npm ci

# ---------------------------------------------------------------------------
# Stage 2: Builder — build Next.js standalone output
# ---------------------------------------------------------------------------
FROM node:18-alpine AS builder

WORKDIR /app

# Copy installed dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Build-time env: set default API URL (overridable at runtime via env)
ENV NEXT_PUBLIC_API_URL=http://todo-chatbot-backend:8000/api/v1
ENV NEXT_TELEMETRY_DISABLED=1

# Build Next.js (produces .next/standalone with output: 'standalone')
RUN npm run build

# ---------------------------------------------------------------------------
# Stage 3: Runner — minimal production image
# ---------------------------------------------------------------------------
FROM node:18-alpine AS runner

WORKDIR /app

# Set production environment
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV HOSTNAME="0.0.0.0"
ENV PORT=3000

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copy standalone server and required assets from builder
COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Switch to non-root user
USER nextjs

EXPOSE 3000

# Health check for Kubernetes liveness/readiness probes
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

# Start the standalone Next.js server
CMD ["node", "server.js"]
