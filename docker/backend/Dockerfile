# =============================================================================
# Backend Dockerfile — FastAPI + MCP + OpenAI Agents SDK
# Multi-stage, non-root, no hardcoded secrets
# Generated by Claude Code (AI-generated infrastructure per constitution XI)
# =============================================================================

# ---------------------------------------------------------------------------
# Stage 1: Builder — install system deps and Python packages
# ---------------------------------------------------------------------------
FROM python:3.12-slim AS builder

WORKDIR /build

# Install build-time system dependencies (gcc for compiled packages, libpq for psycopg2)
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements first for layer caching
COPY requirements.txt .

# Install Python dependencies into a virtual environment for clean copy
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ---------------------------------------------------------------------------
# Stage 2: Runner — minimal production image
# ---------------------------------------------------------------------------
FROM python:3.12-slim AS runner

WORKDIR /app

# Install only runtime system dependency (libpq for psycopg2)
RUN apt-get update && \
    apt-get install -y --no-install-recommends libpq5 curl && \
    rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd --gid 1001 appgroup && \
    useradd --uid 1001 --gid appgroup --shell /bin/bash --create-home appuser

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application source
COPY . .

# All config via environment variables — no hardcoded secrets
# Required at runtime: DATABASE_URL, BETTER_AUTH_SECRET
# Optional: OPENAI_API_KEY, GROQ_API_KEY, CORS_ORIGINS, DEBUG, LLM_PROVIDER
ENV PYTHONUNBUFFERED=1
ENV PORT=8000

# Switch to non-root user
USER appuser

EXPOSE 8000

# Health check for Kubernetes liveness/readiness probes
HEALTHCHECK --interval=30s --timeout=5s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run migrations then start uvicorn
CMD ["sh", "-c", "python -m alembic upgrade head 2>/dev/null || true; uvicorn src.main:app --host 0.0.0.0 --port ${PORT:-8000}"]
